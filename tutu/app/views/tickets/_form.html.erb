<%= form_for (@ticket) do |f| %>
  <%= render 'common/errors', resourse: @ticket %>

  <%= f.hidden_field :train_id %>
  <%= f.hidden_field :departure_station_id %>
  <%= f.hidden_field :arrival_station_id %>

  <div class="field">
    <%= f.label :passenger_name, "ФИО пассажира" %>
    <%= f.text_field :passenger_name %>
  </div>

  <div class="field">
    <%= f.label :passport_number, "Номер паспорта" %>
    <%= f.text_field :passport_number %>
  </div>

  <div class="actions">
    <%= f.submit "Купить билет" %>
  </div>

<% end %>