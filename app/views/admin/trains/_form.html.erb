<%= form_for [:admin, train], html: { style: "display: #{hidden ? 'none' : 'block'}"} do |f| %>
  <%= render 'common/errors', resourse: train %>

  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>

  <div  class="field">
  	<%= f.label :current_station %>
  	<%= f.collection_select :current_station_id, RailwayStation.all, :id, :title %>
  </div>

  <div class="filed">
    <%= f.label :route, "Текущий маршрут" %>
    <%= f.collection_select :route_id, Route.all, :id, :title %>
  </div>

  <div class="field">
    <%= f.label :wagons_order, "Нумерация с головы состава" %>
    <%= f.check_box :wagons_order %>
  </div>

  <div class="actions">
    <%= f.submit "#{ train.new_record? ? 'Создать' : 'Изменить' }" %>
  </div>
<% end %>
